@model SkoWebShop.Pages.LoginModel

<div id="loginForm" style="@(Request.Cookies["isLoggedIn"] == "true" ? "display:none;" : "display:block;")">
    <form method="post">
        <div class="mb-3">
            <label for="Email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="Email" name="NewUser.Email" required />
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>

        <div class="mb-3">
            <label for="Password" class="form-label">Password</label>
            <input type="password" class="form-control" id="Password" name="NewUser.Password" required />
        </div>

        <button type="submit" class="btn btn-primary" name="action" value="login">Login</button>
        <button type="submit" class="btn btn-secondary" name="action" value="create">Create Account</button>
    </form>
</div>

<div id="carousel" style="@(Request.Cookies["isLoggedIn"] == "true" && Request.Cookies["newsLetterSubscribed"] == "true" ? "display:block;" : "display:none;")">
    <h4>News</h4>
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/Try this!.png" class="d-block w-100" alt="..." style="height: 500px; object-fit: cover; object-position: center;">
            </div>
            <div class="carousel-item">
                <img src="~/Images/Try this! (1).png" class="d-block w-100" alt="..." style="height: 500px; object-fit: cover; object-position: center;">
            </div>
            <div class="carousel-item">
                <img src="~/Images/Stay Dry.png" class="d-block w-100" alt="..." style="height: 500px; object-fit: cover; object-position: center;">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev" style="background-color: rgba(128, 128, 128, 0.5); border: none;">
            <span class="carousel-control-prev-icon" aria-hidden="true" style="filter: invert(1);"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next" style="background-color: rgba(128, 128, 128, 0.5); border: none;">
            <span class="carousel-control-next-icon" aria-hidden="true" style="filter: invert(1);"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

@if (Request.Cookies["isLoggedIn"] == "true")
{
    <h4>My Info</h4>
    <div class="d-flex justify-content-center">
        <div class="card" style="width: 36rem;">
            <div class="d-flex">
                <!-- Image Section -->
                <img src="~/Images/Avatar.png" class="card-img-left" alt="..." style="width: 50%; object-fit: cover; height: 100%;">

                <!-- Information Section -->
                <div class="card-body" style="width: 50%; padding-left: 20px;">
                    <h5 class="card-title">My Information</h5>
                    <p class="card-text">First Name: @Request.Cookies["userFirstName"]</p>
                    <p class="card-text">Last Name: @Request.Cookies["userLastName"]</p>
                    <p class="card-text">Street Name: @Request.Cookies["userStreetName"]</p>
                    <p class="card-text">Postal Code: @Request.Cookies["userPostalCode"]</p>
                    <p class="card-text">City: @Request.Cookies["userCity"]</p>
                    <p class="card-text">Email: @Request.Cookies["userEmail"]</p>
                    <a asp-page="/EditUser" class="btn btn-primary">Edit Information</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Subscribe to Newsletter Button (only if not already subscribed) -->
    @if (Request.Cookies["newsLetterSubscribed"] != "true")
    {
        <form method="post" asp-page-handler="SubscribeToNewsletter">
            <button type="submit" class="btn btn-success">Subscribe to Newsletter</button>
        </form>
    }
    else
    {
        <p>You are already subscribed to the newsletter.</p>

        <!-- Unsubscribe Button -->
        <form method="post" asp-page-handler="UnsubscribeFromNewsletter">
            <button type="submit" class="btn" style="background-color: #E0E0E0; color: #000000; border: none;">Unsubscribe from Newsletter</button>
        </form>
    }

    <form method="post" asp-page-handler="Logout">
        <button type="submit" class="btn btn-danger">Logout</button>
    </form>
}
