@page
@model SneakersModel
@{
}

<div class="container">
    <div class="row">
        @foreach (var item in Model.shoes)
        {
            <div class="col-md-6 col-12 mb-3 d-flex justify-content-center">
                <div class="card h-100 w-100 d-flex flex-column">
                    <a href="@Url.Page("Product", new { id = item.Id })" class="text-decoration-none w-100">
                    <div class="d-flex justify-content-center align-items-center" style="height: 300px; overflow: hidden;">
                        <img src="@Url.Content("~/Images/"+item.Name+".jpg")" alt="Jordan Image" class="img-fluid" style="max-height: 100%; width: auto; object-fit: cover;">
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text flex-grow-1">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <a href="#" class="btn btn-primary mt-auto">Add to Cart</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
