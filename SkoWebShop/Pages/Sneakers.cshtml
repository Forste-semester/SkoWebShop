@page
@model SneakersModel
@{
}

<div class="container">
    <div class="row">

        @foreach (var item in Model.Shoes)
        {
            @if (item.Type == Data.ShoeType.Sneaker)
            {
                <div class="col-md-6 col-12 mb-3 d-flex justify-content-center">
                    <div class="card h-100 w-100 d-flex flex-column">
                        <div class="d-flex justify-content-center align-items-center" style="height: 300px; overflow: hidden;">
                            <img src="@item.Image" alt="Default Image" class="img-fluid" style="max-height: 100%; width: auto; object-fit: cover;">
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text flex-grow-1">@item.Price DKK</p>

                            <!-- Fixed Form to Pass shoeId -->
                            <form method="post">
                                <input type="hidden" name="shoeId" value="@item.Id" />
                                <button type="submit" asp-page-handler="AddToCart" class="btn btn-primary mt-auto">Add to Cart</button>
                            </form>

                        </div>
                    </div>
                </div>
            }
        }

    </div>
</div>
