@page "{id:int}"
@model ProductModel
@{
    if (Model.Product == null)
    {
        <div class="container mt-5">
            <h2 class="text-danger">Product not found</h2>
            <a href="/" class="btn btn-primary mt-3">Back to Home</a>
        </div>
        return;
    }
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 text-center">
            <img src="@Url.Content("~/Images/" + Model.Product.Name + ".jpg")" alt="@Model.Product.Name" class="img-fluid" style="max-width: 100%; height: auto;">
        </div>
        <div class="col-md-6">
            <h2>@Model.Product.Name</h2>
            <p>@Model.Product.Type</p>
            <h4 class="text-primary">$@Model.Product.Size</h4>
            <button class="btn btn-success mt-3">Add to Cart</button>
        </div>
    </div>
</div>
