@page
@model IndexModel
@{
    ViewData["SkoShop"] = "Home page";
}



<div class="container-fluid">
    <div class="row flex-nowrap">
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
            <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                    <span class="fs-5 d-none d-sm-inline">Shoe Type</span>
                </a>
                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">

                    <li>
                        <a href="#submenu1" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                            <i class="fs-4 bi-speedometer2"></i> <span class="ms-1 d-none d-sm-inline">All Shoes</span>
                        </a>
                        <ul class="collapse show nav flex-column ms-1" id="submenu1" data-bs-parent="#menu">
                            <li class="w-100">
                                <a asp-area="" asp-page="/Sneakers" class="nav-link px-0">  <span class="d-none d-sm-inline">Sneakers</span>  </a>
                            </li>
                            <li>
                                <a asp-area="" asp-page="/RunningShoes" class="nav-link px-0"> <span class="d-none d-sm-inline">Running Shoes</span>  </a>
                            </li>
                            <li>
                                <a asp-area="" asp-page="/Sandals" class="nav-link px-0"> <span class="d-none d-sm-inline">Sandals</span>  </a>
                            </li>
                            <li>
                                <a asp-area="" asp-page="/Crocs" class="nav-link px-0"> <span class="d-none d-sm-inline">Crocs</span>  </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col py-3">
            <div class="container">
                <div class="row">

                    @foreach (var item in Model.shoes)
                    {
                            <div class="col-md-6 col-12 mb-3 d-flex justify-content-center">
                                <div class="card h-100 w-100 d-flex flex-column">
                                    <a href="@Url.Page("Product", new { id = item.Id })" class="text-decoration-none w-100">
                                        <div class="d-flex justify-content-center align-items-center" style="height: 300px; overflow: hidden;">
                                            <img src="@item.Image" alt="Default Image" class="img-fluid" style="max-height: 100%; width: auto; object-fit: cover;">
                                        </div>
                                        <div class="card-body d-flex flex-column">
                                            <h5 class="card-title">@item.Name</h5>
                                            <p class="card-text flex-grow-1"> @item.Price DKK</p>
                                            <a href="#" class="btn btn-primary mt-auto">Add to Cart</a>
                                        </div>
                                </div>
                            </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>