@page
@model SkoWebShop.Pages.CartModel
@{
    ViewData["Title"] = "Shopping Cart";
}

<section class="h-100 h-custom" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card">
                    <div class="card-body p-4">
                        <div class="row">
                            <div class="col-lg-7">
                                <h5 class="mb-3">
                                    <a href="/" class="text-body"><i class="fas fa-long-arrow-alt-left me-2"></i>Continue shopping</a>
                                </h5>
                                <hr>

                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div>
                                        <p class="mb-1">Shopping cart</p>
                                        <p class="mb-0">You have @Model.CartItems.Count items in your cart</p>
                                    </div>
                                </div>

                                @if (Model.CartItems != null && Model.CartItems.Count > 0)
                                {
                                    @foreach (var item in Model.CartItems)
                                    {
                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between">
                                                    <div>
                                                        <h5 class="card-title">@item.Name</h5>
                                                        <p class="card-text">Price: @item.Price.ToString("C")</p>
                                                    </div>
                                                    <div>
                                                        <form method="post" asp-page-handler="Remove" asp-route-id="@item.Id">
                                                            <button type="submit" class="btn btn-danger">Remove</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                    <hr class="my-4">

                                    <div class="d-flex justify-content-between">
                                        <p class="mb-2">Subtotal</p>
                                        <p class="mb-2">@Model.UserCart.TotalPrice().ToString("C")</p>
                                    </div>

                                    <form method="post" asp-page="ContactInfo" asp-route-id="">
                                        <button type="submit" class="btn btn-info btn-block btn-lg">
                                            <div class="d-flex justify-content-between">
                                                <span>@Model.UserCart.TotalPrice().ToString("C")</span>
                                                <span>Checkout <i class="fas fa-long-arrow-alt-right ms-2"></i></span>
                                            </div>
                                        </button>
                                    </form>

                                }
                                else
                                {
                                    <p>Your cart is empty. <a href="/">Continue Shopping</a></p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
